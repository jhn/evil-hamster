<p id="notice"><%= notice %></p>

<h1>Listing Space Ships</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @space_ships.each do |space_ship| %>
      <tr>
        <td><%= space_ship.name %></td>
        <td><%= link_to 'Show', space_ship %></td>
        <td><%= link_to 'Edit', edit_space_ship_path(space_ship) %></td>
        <td><%= link_to 'Destroy', space_ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

