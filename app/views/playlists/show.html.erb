<p id="notice"><%= notice %></p>

<p>
  <strong>Playlist:</strong>
  <%= @playlist.title + "#{!logged_in? ? ' by ' + @playlist.user.first_name : ''}" %>
</p>

<div>
  <strong>Tracks:</strong>
    <ul>
        <% @playlist.tracks.each do |track| %>
            <li>
                <%= link_to "#{track.title} - #{track.artist}", track.link %> |
                <%= link_to 'Edit', edit_track_path(track) %>
                <%= link_to 'Delete', track_path(track), method: :delete %>
            </li>
        <% end %>
    </ul>
</div>

<% if logged_in? %>
    <%= link_to 'Add Track', new_playlist_track_path(@playlist) %> |
    <%= link_to 'Back', user_path(@playlist.user) %>
<% end %>